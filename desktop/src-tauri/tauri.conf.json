{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PT Nexus",
  "version": "0.1.0",
  "identifier": "com.ptnexus.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PT Nexus",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 760,
        "visible": true,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [
      "../runtime/**/*",
      "../CHANGELOG.json"
    ],
    "windows": {
      "nsis": {
        "languages": [
          "SimpChinese"
        ],
        "installerIcon": "icons/icon.ico",
        "installerHooks": "./nsis/installer-hooks.nsh"
      }
    }
  }
}
